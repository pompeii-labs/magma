{
	"include": ["src"],
	"exclude": ["node_modules/**/*.ts"],
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"module": "CommonJS",
		"outDir": "dist/main",
		"sourceMap": true,
		"target": "ES2015",

		"strict": false,

		"esModuleInterop": true,
		"moduleResolution": "Node",

		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
}