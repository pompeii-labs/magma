{
  "name": "@pompeii-labs/magma",
  "version": "1.1.0",
  "description": "The unopinionated framework to build better agents",
  "keywords": [
    "Agents",
    "Typescript",
    "AI",
    "Agentic",
    "LLM"
  ],
  "repository": "pompeii-labs/magma",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/module/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/main/index.js",
      "types": "./dist/module/index.d.ts"
    },
    "./decorators": {
      "import": "./dist/module/decorators.js",
      "require": "./dist/main/decorators.js",
      "types": "./dist/module/decorators.d.ts"
    },
    "./types": {
      "import": "./dist/module/types/index.js",
      "require": "./dist/main/types/index.js",
      "types": "./dist/module/types/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,demos}/**/*.ts\"",
    "build": "run-s clean format build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json"
  },
  "author": "Pompeii Labs, Inc.",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "readline": "^1.3.0",
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "groq-sdk": "^0.7.0",
    "openai": "^4.69.0"
  }
}
